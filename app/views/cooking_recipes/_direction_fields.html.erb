<div class="row">
  <div class="col-md-6">
    <div class="sortable-item">
      <div class="row">
        <div class="col-xs-2">
          <div class="sortable-handle"></div>
          <div class="sortable-index-display"><%= f.object.sort_order ? f.object.sort_order + 1 : '' %></div>
          <%= f.hidden_field :id %>
          <%= f.hidden_field :sort_order %>
        </div>
        <div class="col-xs-8">
          <%= f.label :direction, class:'sr-only' %>
          <%= f.text_area :description, class:'form-control' %>
        </div>
        <div class="col-xs-2">
          <%= f.hidden_field :_destroy %>
          <%= link_to '#', class:'btn btn-default destroy_fields' do %>
            <%= fa_icon('trash-o') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>