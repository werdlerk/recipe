<div class="row">
  <div class="col-md-1">
    <div class="form-group">
      <%= f.label :amount, class:'sr-only' %>
      <%= f.number_field :amount, class:'form-control' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <%= f.label :unit_id, class:'sr-only' %>
      <%= f.select :unit_id, Unit.all.map { |u| [u.name, u.id] }, { prompt:'Unit...' }, class:'form-control' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <%= f.label :ingredient_id, class:'sr-only' %>
      <%= f.select :ingredient_id, Ingredient.all.map { |i| [i.name, i.id] }, { prompt:'Ingredient...' }, class:'form-control' %>
    </div>
  </div>
  <div class="col-md-1">
    <%= f.hidden_field :_destroy %>
    <%= link_to '#', class:'btn btn-default destroy_fields' do %>
      <%= fa_icon('trash-o') %>
    <% end %>
  </div>
</div>