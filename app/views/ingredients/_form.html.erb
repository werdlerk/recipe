<div class="row">
  <div class="col-sm-6">
    <%= render "shared/error_messages", object: @ingredient %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= form_for @ingredient, role:'form' do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class:'form-control' %>
      </div>

      <%= f.submit t('.actions.save'), class:'btn btn-primary' %>
      <%= link_to t('.actions.cancel'), ingredients_path, class:'btn btn-default' %>
    <% end %>
  </div>
</div>