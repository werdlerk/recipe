<div class="row">
  <div class="col-sm-12">
    <% if flash.present? %>
      &nbsp;
    <% end %>

    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name %>" role="alert">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, raw(msg), :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
