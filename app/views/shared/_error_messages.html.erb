<% if object.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <strong><%= t('activerecord.errors.template.body', model:object.class.model_name.human.downcase) %></strong>
    <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>